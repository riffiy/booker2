<% if @user.errors.any? %>
  <div class="error">
    <h3><%= @user.errors.count %> errors prohibited this obj from being saved</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li class="error-message"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<table>
    <h1>User info</h1>
    <th>
      <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
    </th>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
    <tr>
      <th><%= link_to "Edit", edit_user_path(@user) %></th>
    </tr>
  </tbody>
</table>

<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <p><%= f.submit 'Create Book', class:"btn btn-success" %></p>
<% end %>
   