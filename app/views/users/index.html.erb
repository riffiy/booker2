<table>
  <h1>User info</h1>
  <th>
    <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
  </th>

<tbody>
  <tr>
    <th>Name</th>
    <th><%= @user.name %></th>
  </tr>

  <tr>
    <th>Introduction</th>
    <th><%= @user.introduction %></th>
  </tr>

</tbody>
</table>



<h1>New book</h1>

<%= form_with model: Book.new do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
	
<h4>Opinion</h4>
<%= f.text_area :body %>
	
<p><%= f.submit 'Create Book' %></p>
<% end %>

<h1>Users</h1>
<table>
  <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
  </tr>
  <tr>
    <tbody>
    <% @users.each do |user| %>
    <th><%= image_tag @user.get_profile_image(100,100) %></th>
    <th><%= user.name %></th>
    <th><%= link_to "Show", "/users/#{user.id}" %></th>
    <% end %>
    </tbody>
  </tr>
</table>