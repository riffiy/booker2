<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'template', users: @users %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1 class="border-bottom">Users</h1>
      <table>
        <tr class="border-bottom">
          <th>image</th>
          <th></th>
          <th>name</th>
          <th></th>
        </tr>
        <tr class="border-bottom">
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <th><%= image_tag @user.get_profile_image(100,100) %></th>
              <th></th>
              <th><%= user.name %></th>
              <th></th>
              <th><%= link_to "Show", user_path(user.id) %></th>
            </tr>
            <% end %>
          </tbody>
        </tr>
      </table>
    </div>
  </div>
</div>

