<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div><%= render 'users/template', users: @users %></div> 
    </div>
    <div class="col-md-8">
      <h1 class="border-bottom">Books</h1>
      <table class="border-bottom">
        <tr class="border-bottom">
          <th><span></span></th>
          <th><span></span></th>
          <th>Title</th>
          <th><span></span></th>
          <th><span></span></th>
          <th>Opinion</th>
        </tr>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
              </td>
              <th><span></span></th>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <th><span></span></th>
              <th><span></span></th>
              <td><%= book.body %></td>
              <th><span></span></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

