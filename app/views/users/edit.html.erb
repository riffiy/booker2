<% if @user.errors.any? %>
  <div class="error">
    <h3><%= @user.errors.count %> errors prohibited this obj from being saved</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li class="error-message"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>User info</h1>

<%= form_with model: @user do |f| %>

<div class="field">
  <p>Name</p>
  <h4><%= f.text_field :name %></h4>
</div>

<div class="field">
  <p>Image</p>
  <p><%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %></p> 
</div>

  
<div class="field">
  <p>Introduction</p>
  <%= f.text_area :introduction %>
</div>
  
<h4><%= f.submit 'Update User' %></h4>
  
<% end %>
