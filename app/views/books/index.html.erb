<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div><%= render 'template', users: @users %></div>
    </div>
    
    <div class="col-md-8">
      <h1>Books</h1>
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
        </tr>
        <tr>
          <tbody>
            <% @books.each do |book| %>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            <% end %>
          </tbody>
        </tr>
      </table>
    </div>
  </div>
</div>


