<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div><%= render 'template', users: @users %></div>
    </div>
  </div>
</div>

<h1>Books</h1>
<table>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
    <tr>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user) do %>
            <%= image_tag book.user.get_profile_image(100,100) %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tbody>
</table>

