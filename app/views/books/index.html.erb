<table>
  <h1>User info</h1>
  <th>
    <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
  </th>

<tbody>
  <tr>
    <th>Name</th>
    <th><%= @user.name %></th>
  </tr>

  <tr>
    <th>Introduction</th>
    <th><%= @user.introduction %></th>
  </tr>

</tbody>
</table>

<h1>New book</h1>

<%= form_with model: Book.new do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
	
<h4>Opinion</h4>
<%= f.text_area :body %>
	
<p><%= f.submit 'Create Book' %></p>
<% end %>

<h1>Books</h1>
<table>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
    <tr>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user) do %>
            <%= image_tag book.user.get_profile_image(100,100) %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tbody>
</table>

