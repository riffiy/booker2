<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div><%= render 'template', users: @users %></div>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1 class="border-bottom">Books</h1>
      <table>
        <tr class="border-bottom">
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
        </tr>
        <tbody>
            <% @books.each do |book| %>
              <tr class="border-bottom">
                <th>
                <%= link_to user_path(book.user) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
                </th>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


