<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/template', users: @users %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1 class="border-bottom">Book detail</h1>
      <table>
          
            <tr>
              <td>
                <%= link_to user_path(@book) do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %>
                
                <%= link_to @user.name, user_path(@user) %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <% if @book.user_id == current_user.id %>
                <td><%= link_to edit_book_path(@book.id), class: "btn btn-success" do %>Edit<% end%></td>
                <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
              <% end %>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>

